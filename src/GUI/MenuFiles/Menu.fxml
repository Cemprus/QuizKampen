<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MenuFiles.MenuController">
   <children>
      <BorderPane prefHeight="350.0" prefWidth="250.0">
         <center>
            <VBox alignment="CENTER" prefHeight="285.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="StartSingle" alignment="CENTER" mnemonicParsing="false" onAction="#handleSingleplayerButtonAction" prefHeight="55.0" prefWidth="200.0" style="-fx-translate-y: -20;" text="SINGLEPLAYER" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="StartMulti" alignment="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleMultiplayerButtonAction" prefHeight="55.0" prefWidth="200.0" text="MULTIPLAYER" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="Exit" alignment="CENTER" layoutX="10.0" layoutY="209.0" mnemonicParsing="false" onAction="#handleExitButtonAction" prefHeight="55.0" prefWidth="200.0" style="-fx-translate-y: 20;" text="EXIT" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </center>
         <top>
            <Pane prefHeight="65.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <Rectangle fill="#dadada" height="65.0" stroke="BLACK" strokeType="INSIDE" width="250.0" />
                  <Label alignment="CENTER" prefHeight="65.0" prefWidth="250.0" text="QuizKampen" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold Italic" size="30.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>

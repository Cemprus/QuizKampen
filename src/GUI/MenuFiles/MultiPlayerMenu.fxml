<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.MenuFiles.MultiPlayerMenuController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="350.0">
         <top>
            <Pane BorderPane.alignment="CENTER">
               <children>
                  <Rectangle fill="#00000033" height="40.0" stroke="BLACK" strokeType="INSIDE" width="350.0" />
                  <Label alignment="CENTER" prefHeight="40.0" prefWidth="350.0" text="QuizKampen MuliPlayer Menu">
                     <font>
                        <Font name="System Italic" size="26.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
         <center>
            <VBox fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox fillHeight="false" prefHeight="20.0" prefWidth="350.0">
                     <children>
                        <Label alignment="CENTER" prefWidth="175.0" text="Server ip">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="10.0" prefWidth="75.0" text="Port">
                           <font>
                              <Font size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="30.0" prefWidth="350.0">
                     <children>
                        <TextField fx:id="ServerIP" prefHeight="30.0" prefWidth="175.0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="ServerPort" layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="75.0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="ConnectButton" mnemonicParsing="false" onAction="#ConnectToServer" prefHeight="30.0" prefWidth="100.0" text="Connect" />
                     </children>
                  </HBox>
                  <Label fx:id="ConnectionResult" alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="350.0" />
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="75.0" prefWidth="350.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="MainMenuButton" mnemonicParsing="false" onAction="#goBack" prefHeight="75.0" prefWidth="175.0" text="Main Menu" />
                  <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#exit" prefHeight="75.0" prefWidth="175.0" text="Exit" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
